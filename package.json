{
  "name": "found-scroll",
  "version": "0.3.0",
  "description": "Scroll management for found",
  "files": [
    "lib",
    "es"
  ],
  "main": "lib/index.js",
  "module": "es/index.js",
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "babel -d lib --delete-dir-on-start src",
    "build:esm": "babel --env-name esm -d es --delete-dir-on-start src",
    "lint": "eslint .",
    "prepublish": "npm run build",
    "testonly": "jest --runInBand --verbose",
    "test": "npm run lint && npm run testonly"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  },
  "prettier": {
    "printWidth": 79,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test/setup.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/4Catalyzer/found-scroll.git"
  },
  "keywords": [
    "scroll",
    "react",
    "router"
  ],
  "author": "4Catalyzer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/4Catalyzer/found-scroll/issues"
  },
  "homepage": "https://github.com/4Catalyzer/found-scroll#readme",
  "dependencies": {
    "farce": "^0.4.0",
    "prop-types": "^15.7.2",
    "scroll-behavior": "^0.11.0"
  },
  "peerDependencies": {
    "found": ">=0.5.1",
    "react": "^0.14.9 || >=15.3.0"
  },
  "devDependencies": {
    "@4c/babel-preset": "^7.3.6",
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "babel-jest": "^26.1.0",
    "babel-plugin-add-module-exports": "^1.0.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^7.5.0",
    "eslint-config-4catalyzer-jest": "^2.0.7",
    "eslint-config-4catalyzer-react": "^1.0.8",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.18.2",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "found": "^0.5.8",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.13.1"
  }
}
